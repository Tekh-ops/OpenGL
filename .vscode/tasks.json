{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenGL project",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "presentation": {
                "reveal": "never",
                "clear": true,
                "echo": false
            },
        },
        {
            "label": "postdebugKill",
            "type": "process",
            "command":[
                "${command:workbench.action.terminal.kill}",
                "${command:workbench.action.acceptSelectedQuickOpenItem}",
            ],
            "isBackground": true,
        },
        {
            "label": "Build & run OpenGL project",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "run"
            ],
            "presentation": {
                "reveal": "never",
                "clear": true,
                "echo": false
            },
        },
        {
            "label": "Terminate All Tasks",
            "command": "echo ${input:terminate}",
            "type": "shell",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.terminal.kill",
            "args": "terminateAll"
        },
    ]
}